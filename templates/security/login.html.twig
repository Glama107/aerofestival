{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    {{ include('components/header.html.twig') }}

    <section class="login-hero flex items-center justify-center text-gray-800 relative overflow-hidden">
        {{ include('components/video.html.twig') }}

        <div class="container mx-auto px-6 flex justify-center">
            <div class="login-container w-full max-w-md p-8 md:p-10">
                <div class="text-center mb-8">
                    <h2 class="text-3xl font-bold mb-2 section-title-font">CONNEXION</h2>
                    <p class="text-gray-600">Accédez à votre espace personnel</p>
                    {% if error %}
                        <div class="text-red-500 py-2">Erreur : {{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                </div>

                <form method="post" class="space-y-6">
                    <div>
                        <label for="username" class="block text-sm font-medium text-gray-700 mb-1">Adresse email</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-envelope text-gray-400"></i>
                            </div>
                            <input type="email" value="{{ last_username }}" name="_username" id="username" class="input-field w-full pl-10 pr-4 py-3 bg-gray-50 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="votre@email.com">
                        </div>
                    </div>

                    <div>
                        <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Mot de passe</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-lock text-gray-400"></i>
                            </div>
                            <input type="password" name="_password" id="password"  class="input-field w-full pl-10 pr-4 py-3 bg-gray-50 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="••••••••">
                        </div>
                    </div>

                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <input name="_remember_me" id="_remember_me" type="checkbox" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                            <label for="_remember_me" class="ml-2 block text-sm text-gray-700">
                                Se souvenir de moi
                            </label>
                        </div>

                    </div>
                    <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">
                    <div>
                        <button type="submit" class="w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-300 uppercase tracking-wider">
                            Se connecter
                        </button>
                    </div>
                </form>

                <div class="mt-8 text-center text-xs text-gray-500">
                    <p>En vous connectant, vous acceptez nos <a href="#" class="text-blue-600 hover:underline">Conditions d'utilisation</a> et notre <a href="#" class="text-blue-600 hover:underline">Politique de confidentialité</a>.</p>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
