<div class="timeline-container {{ position }}">
    <div class="timeline-content">
        <div class="timeline-time">
            {{ event.startDate|date('H:i') }} - {{ event.endDate|date('H:i') }}
        </div>
        <h4 class="text-xl font-semibold text-gray-800 mb-2">{{ event.title }}</h4>
        <p class="text-gray-600">{{ event.description|raw }}</p>
    </div>
</div>
