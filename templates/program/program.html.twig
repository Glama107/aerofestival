<section id="programme" class="py-20 bg-white">
    <div class="container mx-auto px-6">
        <div class="text-center mb-16">
            <span class="inline-block px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm font-semibold tracking-wider mb-4">
                ÉVÈNEMENT
            </span>
            <h2 class="text-3xl md:text-4xl font-bold section-title section-title-font">PROGRAMME</h2>
        </div>

        {% for date, events in groupedEvents %}
            <div class="mb-12 text-center {% if not loop.first %}mt-20{% endif %}">
                <h3 class="text-2xl font-bold text-gray-800 mb-4 section-title-font">
                    {{ date|format_datetime(locale='fr', pattern='EEEE d MMMM')|capitalize }}
                </h3>
            </div>

            {{ include('program/timeline/timeline.html.twig', { events: events }) }}
        {% endfor %}
    </div>
</section>
