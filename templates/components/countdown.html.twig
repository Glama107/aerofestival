<div class="countdown-container flex justify-center gap-4 text-center">
    <div class="countdown-box rounded-xl px-6 py-4">
        <div class="countdown-value text-4xl font-bold text-white" id="days">00</div>
        <div class="countdown-label text-sm uppercase text-white">Jours</div>
    </div>
    <div class="countdown-box rounded-xl px-6 py-4">
        <div class="countdown-value text-4xl font-bold text-white" id="hours">00</div>
        <div class="countdown-label text-sm uppercase text-white">Heures</div>
    </div>
    <div class="countdown-box rounded-xl px-6 py-4">
        <div class="countdown-value text-4xl font-bold text-white" id="minutes">00</div>
        <div class="countdown-label text-sm uppercase text-white">Minutes</div>
    </div>
    <div class="countdown-box rounded-xl px-6 py-4">
        <div class="countdown-value text-4xl font-bold text-white" id="seconds">00</div>
        <div class="countdown-label text-sm uppercase text-white">Secondes</div>
    </div>
</div>
