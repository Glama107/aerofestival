{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div id="toast-{{ loop.index }}-{{ label }}" class="fixed bottom-4 right-4 mb-4 animate-fade-in z-50">
            <div class="{% if label == 'success' %}bg-green-50 border-green-500 text-green-800
                        {% elseif label == 'error' %}bg-red-50 border-red-500 text-red-800
                        {% elseif label == 'warning' %}bg-yellow-50 border-yellow-500 text-yellow-800
                        {% else %}bg-blue-50 border-blue-500 text-blue-800
                        {% endif %} border-l-4 rounded-lg p-4 shadow-lg max-w-xs">
                <div class="flex items-start">
                    <div class="flex-shrink-0">
                        <i class="fas 
                            {% if label == 'success' %}fa-check-circle text-green-500
                            {% elseif label == 'error' %}fa-exclamation-circle text-red-500
                            {% elseif label == 'warning' %}fa-exclamation-triangle text-yellow-500
                            {% else %}fa-info-circle text-blue-500
                            {% endif %} text-xl"></i>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm font-medium">
                            {% if label == 'success' %}Succ√®s
                            {% elseif label == 'error' %}Erreur
                            {% elseif label == 'warning' %}Avertissement
                            {% else %}Information
                            {% endif %}
                        </p>
                        <p class="mt-1 text-sm">{{ message }}</p>
                    </div>
                    <button onclick="this.closest('[id^=toast-]').remove()"
                            class="ml-auto -mx-1.5 -my-1.5 bg-transparent rounded-lg p-1.5 hover:opacity-75">
                        <i class="fas fa-times {% if label == 'error' %}text-red-500{% elseif label == 'warning' %}text-yellow-500{% elseif label == 'success' %}text-green-500{% else %}text-blue-500{% endif %}"></i>
                    </button>
                </div>
            </div>
        </div>
    {% endfor %}
{% endfor %}
